%tr.govuk-table__row.vacancy[vacancy]
  %td.govuk-table__cell= link_to vacancy.job_title, school_job_path(vacancy.id), class: 'govuk-link view-vacancy-link'
  %td.govuk-table__cell= vacancy.created_at
  %td.govuk-table__cell= vacancy.updated_at
  %td.govuk-table__cell= link_to t('jobs.edit_link'), school_job_edit_path(vacancy.id), class: 'govuk-link'
  %td.govuk-table__cell= link_to t('jobs.delete_link'), school_job_path(job_id: vacancy.id), class: 'govuk-link', method: :delete, data: { confirm: t('jobs.are_you_sure', job_title: vacancy.job_title) }
