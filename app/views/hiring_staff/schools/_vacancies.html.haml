          %tr.govuk-table__row
            %th.govuk-table__header= t('jobs.job_title')
            %th.govuk-table__header= t('jobs.date_drafted')
            %th.govuk-table__header{ colspan: 2}= t('jobs.actions')
        %tbody.govuk-table__body
