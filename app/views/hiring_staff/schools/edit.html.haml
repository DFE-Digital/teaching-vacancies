- content_for :page_title_prefix, "Edit description for #{@school.name}"

%h1.govuk-heading-l
  Edit description for
  = @school.name

= form_for @school do |form|

  - if @school.errors.any?
    %div.govuk-error-summary{role: "alert", 'aria-labelledby' => "school-error-heading", tabindex: '-1'}
      %h2.govuk-error-summary__title#school-error-heading
        There was an error saving the description

  - description_class = 'form-group-error' if @school.errors[:description].any?
  %div.govuk-form-group{class: description_class}
    = form.label :description, class: 'govuk-label' do
      Description
      = content_tag 'span', @school.errors[:description].join(', '), class: 'govuk-error-message' if @school.errors[:description].any?
    = form.text_area :description, class: 'govuk-textarea govuk-!-width-three-quarters', rows: 5

  %button.govuk-button{type: 'submit'} Save