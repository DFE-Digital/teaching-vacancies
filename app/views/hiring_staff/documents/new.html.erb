                  <input class="govuk-radios__input" id="add-docs-yes" name="add-docs" type="radio" value="yes">
                  <label class="govuk-label govuk-radios__label" for="add-docs-yes">
                    Yes
                  </label>
                </div>
                <div class="govuk-radios__item">
                  <input class="govuk-radios__input" id="add-docs-no" name="add-docs" type="radio" value="no">
                  <label class="govuk-label govuk-radios__label" for="add-docs-no">
                    No
                  </label>
                </div>
              </div>
            </fieldset>
          </div>
          <button class="govuk-button" data-module="govuk-button">Save and continue</button>
        </form>

      </div>
      <!-- Main content END -->

