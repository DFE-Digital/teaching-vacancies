- if @vacancy.present?
  - content_for :page_title_prefix, page_title_prefix(@vacancy, @job_location_form, t('jobs.job_location'))
- else
  - content_for :page_title_prefix, "#{@job_location_form.errors.present? ? 'Error: ' : ''}#{t('jobs.job_location')} â€” #{t('jobs.create_a_job_title_no_org')}"


= render 'hiring_staff/vacancies/vacancy_form_partials/heading'

- if @vacancy.present? && @vacancy&.state != 'create'
  = link_to t('buttons.cancel_and_return'), edit_school_job_path(@vacancy.id), class: 'govuk-back-link'

.govuk-grid-row
  .govuk-grid-column-two-thirds
    = form_for @job_location_form, url: @job_location_url, html: { method: @job_location_url_method } do |f|
      = f.govuk_error_summary

      %h2.govuk-heading-l
        = t('jobs.job_location')

      = render 'hiring_staff/vacancies/vacancy_form_partials/hidden_state_input', f: f

      = f.govuk_collection_radio_buttons :job_location,
        Vacancy::JOB_LOCATION_OPTIONS,
        :second,
        :first,
        legend: { text: t('helpers.fieldset.job_location_form.job_location_html') }
        
      = render 'hiring_staff/vacancies/vacancy_form_partials/continue_or_update_submit', f: f

  .govuk-grid-column-one-third
    = render 'hiring_staff/vacancies/sidebar'
