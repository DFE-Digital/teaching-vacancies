- content_for :page_title_prefix, "Supporting documents â€” Publish a job for #{current_school.name}"

%h1.govuk-heading-l
  = t('jobs.publish_heading', school: current_school.name)
  %span.govuk-caption-l
    Step 2 of 3

.govuk-grid-row
  .govuk-grid-column-two-thirds
    = form_for @documents_form, url: documents_school_job_path, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f|
      = f.govuk_error_summary 'Please correct the following errors'

      %h2.govuk-heading-m
        = t('jobs.supporting_documents')

      = f.govuk_file_field :documents,
        label: { text: t('jobs.upload_file'), size: 's' },
        multiple: true,
        enctype: 'multipart/form-data' do

        %button.govuk-button.govuk-button--secondary.display-none{ class: 'govuk-!-margin-top-2 govuk-!-margin-bottom-1' }
          = t('jobs.select_file')

      = f.govuk_submit t('jobs.upload_file'), secondary: true

      .js-documents{ class: ('js-documents--empty' if @documents.none?) }
        = render 'hiring_staff/vacancies/documents/documents'
        %p.js-documents__no-files= t('jobs.no_files_message')

      = f.govuk_submit t('buttons.save_and_continue')
