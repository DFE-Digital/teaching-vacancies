- content_for :page_title_prefix, page_title_prefix(@vacancy, @application_details_form, t('jobs.application_details'))
= render 'hiring_staff/vacancies/vacancy_form_partials/heading'

- if @vacancy.present? && @vacancy&.state != 'create'
  = render 'hiring_staff/vacancies/vacancy_form_partials/cancel_and_return_link'
- else
  = link_to t('buttons.back'), organisation_job_supporting_documents_path(@vacancy.id), class: 'govuk-back-link'

.govuk-grid-row
  .govuk-grid-column-two-thirds
    = form_for @application_details_form, url: organisation_job_application_details_path(@vacancy.id), html: { method: "patch" } do |f|
      = f.govuk_error_summary

      %h2.govuk-heading-l
        = t('jobs.application_details')

      = render 'hiring_staff/vacancies/vacancy_form_partials/hidden_state_input', f: f

      = f.govuk_email_field :contact_email,
        label: { text: t('helpers.fieldset.application_details_form.contact_email_html'), size: 's' },
        hint_text: t('helpers.hint.application_details_form.contact_email'),
        required: true

      = f.govuk_text_area :school_visits,
        label: { text: t("helpers.fieldset.application_details_form.#{organisation_type_basic(@vacancy.organisation)}_visits"), size: 's' },
        hint_text: t("helpers.hint.application_details_form.#{organisation_type_basic(@vacancy.organisation)}_visits"),
        rows: 10

      = f.govuk_text_area :how_to_apply,
        label: { text: t('helpers.fieldset.application_details_form.how_to_apply'), size: 's' },
        hint_text: t('helpers.hint.application_details_form.how_to_apply'),
        rows: 10

      = f.govuk_url_field :application_link,
        label: { text: t('helpers.fieldset.application_details_form.application_link'), size: 's' },
        hint_text: t('helpers.hint.application_details_form.application_link')

      = render 'hiring_staff/vacancies/vacancy_form_partials/submit', f: f

  .govuk-grid-column-one-third
    = render(HiringStaff::SidebarComponent.new(vacancy: @vacancy))
