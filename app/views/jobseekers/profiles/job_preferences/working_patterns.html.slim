- content_for :page_title_prefix, "Job preferences: phases"
- content_for :breadcrumbs do
  nav.govuk-breadcrumbs aria-label="Breadcrumbs"
  = govuk_back_link text: t("buttons.back"), href: back_url

= form_for(@step, url: { action: :update }, as: :job_preferences) do |f|
  = f.govuk_error_summary

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      = f.govuk_collection_check_boxes :working_patterns, @step.options, :first, :last, legend: { size: "l", text: "Working patterns" }, caption: { text: "Job preferences", size: "l" }
      = f.govuk_text_area :working_pattern_details, label: { text: "Provide more details about your working pattern preference (optional)", size: "s" }, hint: { text: "For example, if you're looking for a role that's 2 days a week, or Monday to Wednesday." }
      = f.govuk_submit "Save and continue"
      p = f.link_to "Cancel", escape_path
