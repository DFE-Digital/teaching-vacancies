- content_for :page_title_prefix, t(".page_title")

- if @job_applications.any?
  - content_for :skip_links do
    = govuk_skip_link(href: "#applications-results", text: t(".skip_link"))
h1.govuk-heading-l = t(".page_title_with_count", count: @count)

.govuk-grid-row
  .govuk-grid-column-one-quarter
    = render "jobseekers/shared/side_navigation"
  .govuk-grid-column-three-quarters
    - if @job_applications.any?
      = govuk_pagination(pagy: @pagy)
      #applications-results
        - @job_applications.each do |job_application|
          = render "job_application", job_application: job_application

    - else
      = render EmptySectionComponent.new title: t(".no_job_applications") do
        = t(".no_job_applications_body_html", link_to: govuk_link_to(t(".find_and_apply"), root_path))

= govuk_details summary_text: t(".one_login_banner.header") do
  p.govuk-body = t(".one_login_banner.paragraph1")
  p.govuk-body = t(".one_login_banner.paragraph2_html", link: govuk_link_to(t(".one_login_banner.transfer_profile_link_text"), new_jobseekers_request_account_transfer_email_path))
