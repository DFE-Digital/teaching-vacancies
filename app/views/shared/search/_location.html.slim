  label: { text: t("jobs.search.location"), size: "s" },
  hint: { text: t("jobs.search.location_hint"), size: "s" },
  class: %w[js-location-finder__input],
  form_group: { classes: "js-location-finder location-text" },
  autocomplete: "off",
  "aria-expanded": "false",
  "aria-owns": "location__listbox",
