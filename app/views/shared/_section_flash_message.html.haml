.js-dismissable.mb1{role: 'alert', tabindex: '-1', class: "govuk-#{style}-summary"}
  .govuk-body.mv0{ class: "govuk-#{style}-summary__body" }
    - unless style == 'error'
      %a.govuk-link.govuk-link--no-visited-state.dismiss-link.js-dismissable__link{ href: '#' }
        = t('buttons.dismiss')
    %h3.govuk-heading-s.mb0
      = heading
    = message
    %br
    - sections.each do |section|
      %a.govuk-link.govuk-link--no-visited-state{ href: "##{section}_heading"}
        = t("jobs.#{section}")
      %br
