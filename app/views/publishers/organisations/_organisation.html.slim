= govuk_summary_list do |summary_list|
  - summary_list.with_row do |row|
    - row.with_key text: t("publishers.organisations.organisation.name.label")
    - row.with_value text: organisation.name

  - unless organisation.local_authority?
    - summary_list.with_row do |row|
      - row.with_key text: t("publishers.organisations.organisation.address.label")
      - row.with_value text: full_address(organisation)

  - if organisation.school?
    - summary_list.with_row do |row|
      - row.with_key text: t("publishers.organisations.organisation.type.label")
      - row.with_value text: organisation.school_type

    - if organisation.phase.present?
      - summary_list.with_row do |row|
        - row.with_key text: t("publishers.organisations.organisation.phase.label")
        - row.with_value text: t("publishers.organisations.organisation.phase.values.#{organisation.phase}")

    - summary_list.with_row do |row|
      - row.with_key text: t("publishers.organisations.organisation.school_age.label")
      - row.with_value text: age_range(organisation)

    - if (text = number_of_pupils(organisation))
      - summary_list.with_row do |row|
        - row.with_key text: t("publishers.organisations.organisation.size.label")
        - row.with_value text: text

  - summary_list.with_row(html_attributes: { id: "email" }) do |row|
    - row.with_key text: t("publishers.organisations.organisation.email.label")
    - row.with_value do
      - link = govuk_mail_to(organisation.email, organisation.email, class: "wordwrap") if organisation.email.present?
      = required_profile_info(value: link, missing_prompt: t("publishers.organisations.organisation.email.missing_prompt"))
    - row.with_action text: t("buttons.change"), href: edit_publishers_organisation_email_path(organisation), classes: "govuk-link--no-visited-state", visually_hidden_text: t("publishers.organisations.organisation.email.label")

  - summary_list.with_row(html_attributes: { id: "website" }) do |row|
    - row.with_key text: t("publishers.organisations.organisation.website.label")
    - row.with_value do
      - link = govuk_link_to(organisation.url, organisation.url, class: "wordwrap") if organisation.url.present?
      = required_profile_info(value: link, missing_prompt: t("publishers.organisations.organisation.website.missing_prompt"))
    - row.with_action text: t("buttons.change"), href: edit_publishers_organisation_website_path(organisation), classes: "govuk-link--no-visited-state", visually_hidden_text: t("publishers.organisations.organisation.website.label")

  - summary_list.with_row(html_attributes: { id: "description" }) do |row|
    - row.with_key text: t("publishers.organisations.organisation.description.label.#{organisation.school? ? :school : :organisation}")
    - row.with_value do
      = required_profile_info(value: truncate(organisation.description, length: 130), missing_prompt: t("publishers.organisations.organisation.description.missing_prompt.#{organisation.school? ? :school : :organisation}"))
    - row.with_action text: t("buttons.change"), href: edit_publishers_organisation_description_path(organisation), classes: "govuk-link--no-visited-state", visually_hidden_text: t("publishers.organisations.organisation.description.label.#{organisation.school? ? :school : :organisation}")

  - summary_list.with_row(html_attributes: { id: "safeguarding_information" }) do |row|
    - row.with_key text: t("publishers.organisations.organisation.safeguarding_information.label")
    - row.with_value do
      = required_profile_info(value: truncate(organisation.safeguarding_information, length: 130), missing_prompt: t("publishers.organisations.organisation.safeguarding_information.missing_prompt"))
    - row.with_action text: t("buttons.change"), href: edit_publishers_organisation_safeguarding_information_path(organisation), classes: "govuk-link--no-visited-state", visually_hidden_text: t("publishers.organisations.organisation.safeguarding_information.label")

  - summary_list.with_row(html_attributes: { id: "logo" }) do |row|
    - row.with_key text: t("publishers.organisations.organisation.logo.label")
    - row.with_value classes: "vertical-align-top" do
      = required_profile_image(image: @organisation.logo,
                               missing_prompt: t("publishers.organisations.organisation.logo.missing_prompt.#{organisation.school? ? :school : :organisation}"),
                               alt_text: t("publishers.organisations.organisation.logo.alt_text", organisation_name: @organisation.name))
    - row.with_action text: t("buttons.change"), href: edit_publishers_organisation_logo_path(organisation), classes: "govuk-link--no-visited-state", visually_hidden_text: t("publishers.organisations.organisation.logo.label")

  - summary_list.with_row(html_attributes: { id: "photo" }) do |row|
    - row.with_key text: t("publishers.organisations.organisation.photo.label")
    - row.with_value classes: "vertical-align-top" do
      = required_profile_image(image: @organisation.photo,
                               missing_prompt: t("publishers.organisations.organisation.photo.missing_prompt.#{organisation.school? ? :school : :organisation}"),
                               alt_text: t("publishers.organisations.organisation.photo.alt_text", organisation_name: @organisation.name))
    - row.with_action text: t("buttons.change"), href: edit_publishers_organisation_photo_path(organisation), classes: "govuk-link--no-visited-state", visually_hidden_text: t("publishers.organisations.organisation.photo.label")

  - if organisation.has_ofsted_report?
    - summary_list.with_row do |row|
      - row.with_key text: t("publishers.organisations.organisation.ofsted_report.label")
      - row.with_value text: ofsted_report_link(organisation, class: "wordwrap")
