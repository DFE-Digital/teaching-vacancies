- current_organisation.schools.not_closed.order(:name).each do |school|
  h2.govuk-heading-m = school.name.titlecase
  .school
    = govuk_summary_list do |summary|
      - summary.slot :row,
                  key: t("schools.description"),
                  value: safe_join([tag.div(truncate(school.description, length: 130), class: "govuk-body"),
                                    tag.div(govuk_link_to(t("organisation.view_more_or_change"), edit_organisation_school_path(school), class: "govuk-link--no-visited-state govuk-body"))])
      - summary.slot :row,
                  key: t("schools.address"),
                  value: full_address(school)
      - summary.slot :row,
                  key: t("schools.school_age"),
                  value: age_range(school)
      - summary.slot :row,
                  key: t("schools.type"),
                  value: organisation_type(school)
      - summary.slot :row,
                  key: t("schools.website"),
                  value: website_link(school),
                  action: safe_join([tag.div(govuk_link_to(t("buttons.change"), edit_organisation_school_path(school)), class: "govuk-link--no-visited-state"),
                                      tag.span(t("publishers.organisations.aria_change_website", organisation_type: organisation_type_basic(school)), class: "govuk-visually-hidden")])
      - summary.slot :row,
                  key: t("schools.urn"),
                  value: school.urn
