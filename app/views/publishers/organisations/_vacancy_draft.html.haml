.card
  .card__contents
    %dl.card__title
      %dd.govuk-body-l= govuk_link_to(vacancy.job_title, organisation_job_path(vacancy.id), class: 'view-vacancy-link')
    %dl.card__details
      - if organisation.is_a?(SchoolGroup)
        %dd= vacancy.readable_job_location
      %dd.govuk-bodyvacancy.created_at

  %dl.card__actions
    %dd
      %ul.govuk-list
        %li= govuk_link_to(t('jobs.edit_link'), vacancy.edit_path)
        %li= govuk_link_to(t('jobs.copy_link'), vacancy.copy_path, method: :get)
        %li= govuk_link_to(t('jobs.delete_link'), vacancy.delete_path, method: :delete, data: { confirm: t('jobs.are_you_sure', job_title: vacancy.job_title) } )
