ul.search-results role="list"
  - vacancies.each do |vacancy|
    li role="listitem" tab-index="0"
      h2.govuk-heading-m class="govuk-!-margin-bottom-0"
        = results_link(vacancy, class: "view-vacancy-link")
      p.govuk-body
        = vacancy_full_job_location(vacancy)
      dl
        dt class="govuk-!-font-weight-bold" = salary_label(vacancy)
        dd = salary_value(vacancy)
      dl
        dt class="govuk-!-font-weight-bold" = organisation_type_label(vacancy)
        dd = organisation_type_value(vacancy)
      dl
        dt class="govuk-!-font-weight-bold" = t("jobs.working_patterns")
        dd = working_patterns(vacancy)
      dl
        dt class="govuk-!-font-weight-bold" = t("jobs.expires_at")
        dd = format_time_to_datetime_at(vacancy.expires_at)
