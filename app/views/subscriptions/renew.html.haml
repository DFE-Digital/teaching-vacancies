- content_for :page_title_prefix do
  = t('subscriptions.renew.title')

- content_for :page_description do
  = t('subscriptions.renew.title')

.govuk-grid-row
  .govuk-grid-column-full
    %h1.govuk-heading-xl
      = t('subscriptions.renew.title')

.govuk-grid-row
  .govuk-grid-column-one-half
    %p.govuk-body-l=t('subscriptions.renew.intro')

    = render partial: 'criteria', locals: { subscription: @subscription }

    - if @subscription.expires_on.nil?
      %p.govuk-body=t('subscriptions.renew.expired')
    - else
      %p.govuk-body=t('subscriptions.renew.end_date', date: @subscription.expires_on.to_s(:default))

    %p.govuk-body=t('subscriptions.renew.continue')

    %p.govuk-body=t('subscriptions.renew.change_instructions')

    = simple_form_for @subscription, url: @path, method: @method do |f|
      = render partial: 'form', locals: { form: f, subscription: @subscription }

      = f.button :submit, 'Resubscribe'