[
  {
    "name": "${task_name}",
    "image": "${image}:latest",
    "portMappings": [
      {
        "containerPort": ${task_port},
        "hostPort": 0
      }
    ],
    "memory": 512,
    "networkMode": "bridge",
    "entryPoint": ${entrypoint},
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${project_name}-${environment}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${task_name}"
      }
    },
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "${rails_env}"
      }
    ]
  }
]
