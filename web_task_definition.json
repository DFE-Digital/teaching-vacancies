[
  {
    "name": "${task_name}",
    "image": "${image}:latest",
    "portMappings": [
      {
        "containerPort": ${task_port},
        "hostPort": 0
      }
    ],
    "memory": 256,
    "networkMode": "bridge",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${project_name}-${environment}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${task_name}"
      }
    },
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "${environment}"
      },
      {
        "name": "HTTP_USER",
        "value": "${http_user}"
      },
      {
        "name": "HTTP_PASS",
        "value": "${http_pass}"
      },
      {
        "name": "GOOGLE_MAPS_API_KEY",
        "value": "${google_maps_api_key}"
      },
      {
        "name": "SECRET_KEY_BASE",
        "value": "${secret_key_base}"
      },
      {
        "name": "RAILS_LOG_TO_STDOUT",
        "value": "true"
      },
      {
        "name": "RAILS_SERVE_STATIC_FILES",
        "value": "true"
      },
      {
        "name": "DATABASE_URL",
        "value": "postgres://${database_user}:${database_password}@${database_url}:5432/${project_name}_${environment}?template=template0&pool=5&encoding=unicode"
      }
    ]
  }
]
